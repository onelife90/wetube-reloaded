extends ../base
include ../mixins/video

block content
    div.profile__data
        if !loggedInUser.avatarUrl
            span.none-avatar ðŸ˜Ž 
        else 
            if user.avatarUrl.includes("https://")
                img.avatar(src=user.avatarUrl, crossorigin)
            else
                img.avatar(src=`/${user.avatarUrl}`, crossorigin)
        h3=user.name
    div.video__grid
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos found