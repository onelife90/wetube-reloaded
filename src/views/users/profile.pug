extends ../base
include ../mixins/video

block content
    div.profile__data
        if (!loggedInUser.avatarUrl)
            span.none-avatar ðŸ˜Ž 
        else
            if loggedInUser.avatarUrl.includes("github")
                img.avatar(src=loggedInUser.avatarUrl, crossorigin)
            else if loggedInUser.avatarUrl.includes("amazonaws")
                img.avatar(src=loggedInUser.avatarUrl, crossorigin)
            else
                img.avatar(src=`/${loggedInUser.avatarUrl}`)
        h3=user.name
    div.video__grid
        each video in user.videos
            +video(video)
        else 
            span.empty__message No videos found