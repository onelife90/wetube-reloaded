extends base

block content 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="username", required, placeholder="Username", type="text")
        input(name="password", required, placeholder="Password", type="password")
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=3d365f44da40592340a1") Continue with Github &rarr;
    hr
    div 
        span Don't have an account? 
        a(href="/join") Create one now &rarr;